<h1><%= @post.text %></h1>

<%= link_to "Create Comment", new_post_comment_path(@post) %>
<%= link_to 'Back', posts_path %>


<% @post.comments.each do |comment| %>
  <p>
    <strong>Comment:</strong>
    <a href="<%= post_comment_path(@post, comment) %>">
      <%= comment.body %>
    </a>    
  </p>
<% end %>