<%= form_with model: [ comment.post.user, comment.post, comment ] do |form| %>
  <p>
    <%= form.label :body %><br>
    <%= form.text_area :body %>
    <% comment.errors.full_messages_for(:body).each do |message| %>
      <div><%= message %></div>
    <% end %>
  </p>
  <p>
    <%= form.submit %>
  </p>
<% end %>

<%= link_to 'Back', user_post_comments_path(comment.post.user, comment.post ) %>
