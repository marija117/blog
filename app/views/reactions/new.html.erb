<%= form_with model: [ @reaction.comment.post, @reaction.comment,  @reaction] do |form| %>
  <p>
    <%= form.label :category %><br>
    <%= form.select :category, ['like', 'smile', 'thumbs_up'], selected: 'like' %>

    <% @reaction.errors.full_messages_for(:body).each do |message| %>
      <div><%= message %></div>
    <% end %>
  </p>
  <p>
    <%= form.submit %>
  </p>
<% end %>

<%= link_to 'Back', post_comment_path(@reaction.comment.post, @reaction.comment) %>
